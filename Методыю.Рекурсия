namespace ConsoleApp3
{

    class Program
    {
         static void Add1(double a, double b, double result)
        {
            
            result = result + a + b;
             
            Console.WriteLine(result);
            Add1(a, b, result);
           
           
        }
        static void Main(string[] args)
        {
            double result = 0;
            double a = double.Parse(Console.ReadLine());
            double b = double.Parse(Console.ReadLine());
            Add1(a, b, result);

        }

    }
}
